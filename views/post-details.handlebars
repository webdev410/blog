<div class="row justify-content-center mt-3">

	<section class="card post-details">
		<div class="card-header">

			{{#if post}}
				<i class="fas fa-user mr-2"></i>
				<h5 style="display: inline;">{{post.user.username}}</h5>
			{{/if}}
		</div>

		<div class="card-body">
			<p class="card-text date">Posted: {{format_date post.createdAt}}</p>
			<a href="/post/{{post.id}}">
				<h5 class="card-title">{{post.post_title}}</h5>
			</a>
			<p class="card-text"> {{post.post_body}}</p>
		</div>

		<div class="comments">



			{{#each post.user.comments}}
				<div class="card">
					<div class="card-body">
						<blockquote class="blockquote mb-0">
							<p>{{comment_body}}</p>


						</blockquote>
					</div>
				</div>
				<footer class="blockquote-footer">Posted by <cite title="Source Title">{{username}}</cite>
				</footer>
			{{/each}}

		</div>










		{{>writeComment}}







		{{!-- {{>showComments}} --}}
	</section>

</div>