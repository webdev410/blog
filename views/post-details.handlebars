<div class="row justify-content-center mt-3">

	<section class="card post-details">
		<a href="/post/{{post.id}}">
			<div class="card-header">
				{{#if post}}
					<p style="display: inline;">Posted By:</p>
					<h5 style="display: inline;">{{post.user.username}}</h5>
				{{/if}}

			</div>

			<div class="card-body">
				<h5 class="card-title">{{post.title}}</h5>

				<p class="card-text"> {{post.text}}</p>
				<p class="card-text date" style="display: inline;">
					{{format_date post.createdAt}}
				</p>
			</div>
		</a>

		{{! Write Comment Section }}

		<form class="comment-form">
			<div class="form-group">
				<textarea
					type="text"
					id="comment"
					name="comment"
					placeholder="Write a comment..."
					class="col-12"
				></textarea>
			</div>
			<div class="form-group d-flex col-12 justify-content-end">
				<button
					type="submit"
					class="btn btn-sm btn-secondary"
					id="post-comment"
				>Post Comment</button>

			</div>

		</form>

		{{! Read Comments Section }}
		{{#each comment}}
			<div class="readComment">
				{{post.comments.comment}}
			</div>

		{{/each}}
	</section>
</div>

<script src="/js/comment.js"></script>